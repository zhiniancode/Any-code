{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Any Code",
  "version": "5.12.8",
  "identifier": "claude.workbench.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Any Code",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "visible": false
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost http://asset.localhost tauri: blob: data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'; connect-src 'self' ipc: https://ipc.localhost https://* http://*",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      },
      "capabilities": [
        "default"
      ]
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/anyme123/Any-code/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY0MjRBOENBQTI1MEM1NDEKVWxkU1NRbmhXUTJsNWNXZHJPVTFGWldST1ZsSnpRV3BvVEU5VlJHeENUMFJrYzJWVGNGcEZNM2R6WW5WNWFYVkZWa1J3Ymtoek1tNAo="
    },
    "shell": {
      "open": true
    }
  },
  "bundle": {
      "active": true,
      "createUpdaterArtifacts": true,
      "targets": "all",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "Professional GUI Toolkit for AI CLI",
    "longDescription": "Any Code is a professional desktop application and comprehensive toolkit for AI CLI. Provides an intuitive interface for AI-powered development workflows, project management, and advanced AI interactions. Supports Windows and macOS.",
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "languages": ["SimpChinese", "English"],
        "displayLanguageSelector": true
      }
    }
  }
}
